#!/bin/bash

mask2cidr() { 
   c=0 x=0$( printf '%o' ${1//./ } )
   while [ $x -gt 0 ]; do
       let c+=$((x%2)) 'x>>=1'
   done
   echo $c ;
}

# Creates a backup
cp /etc/netplan/50-cloud-init.yaml /etc/netplan/50-cloud-init.yaml.bk

# NIC
nic=`ifconfig | awk 'NR==1{print $1}'`

# IP Address
ip=`ifconfig | awk 'NR==2{print $2}'`
subnet=`ifconfig | awk 'NR==2{print $4}'`
subnet_cidr=`mask2cidr ${subnet}`
staticip="${ip}/${subnet_cidr}"

# Gateway
gateway=`ip route | awk 'NR==1{print$3}'`

# Exec
echo
cat > /etc/netplan/50-cloud-init.yaml <<EOF
network:
    ethernets:
        $nic
            dhcp4: false
            addresses: [$staticip]
            gateway4: $gateway
            nameservers:
                addresses: [$gateway]
    version: 2
EOF
netplan apply
echo
